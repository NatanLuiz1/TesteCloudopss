node {
    def app

    stage('Clone repository'){
        checkout scm
    }

    stage('Build image'){
        app = docker.build("natanluiz1/final_test")
    }

    stage('test application'){
        app.inside{
            sh 'echo "teste ok"'
        }
    }
    stage('Push image'){
        docker.withRegistry('https://registry.hub.docker.com', 'docker-hub-credentials'){
            app.Push("${env.BUILD_NUMBER}")
            app.Push("latest")
        }
    }
}